@model QLKS_H2O.Models.PHIEU_THUEPHONG

@{
    ViewBag.Title = "Phiếu thuê phòng";
    Layout = "~/Areas/Admin/Views/Shared/_LeTanLayout.cshtml";
}

<h3 class="text-danger text-center">Bạn có chắc chắn xóa phiếu thuê phòng này không?</h3>
<div style="width: 500px" class="mx-auto">
    <h4>THÔNG TIN PHIẾU THUÊ PHÒNG</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt style="float: left">
            Số phiếu:&nbsp;
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SO_PHIEU)
        </dd>

        <dt style="float: left">
            Khách thuê:&nbsp;
        </dt>

        <dd>
            @Html.DisplayFor(model => model.KHACH.HOTEN_KHACH)
        </dd>

        <dt style="float: left">
            Nhân viên lập phiếu:&nbsp;
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NHANVIEN.HOTEN_NHANVIEN)
        </dd>

        <dt style="float: left">
            Ngày lập phiếu:&nbsp;
        </dt>

        <dd>
            @Model.NGAYLAP_PHIEU.ToString("dd/MM/yyyy")
        </dd>

        <dt style="float: left">
            Ngày đến:&nbsp;
        </dt>

        <dd>
            @Model.NGAYDEN.ToString("dd/MM/yyyy")
        </dd>

        <dt style="float: left">
            Ngày đi:&nbsp;
        </dt>

        <dd>
            @Model.NGAYDI.ToString("dd/MM/yyyy")
        </dd>

        <dt style="float: left">
            Đã trả phòng:&nbsp;
        </dt>

        <dd>
            @(Model.DATRAPHONG == true ? "Đã" : "Chưa")
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-danger btn-sm" /> |
            @Html.ActionLink("Quay lại", "DanhSachPhieuThue")
        </div>
    }
</div>
