
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section style {
    @RenderSection("letan_style", false)
}

@section navtop {
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <a class="navbar-brand" href="/Admin/LeTan/Index">LỄ TÂN</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse"
                data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse text-right" id="navbarSupportedContent">
            <ul class="navbar-nav w-100">
                <li class="nav-item">
                    <a class="nav-link @(ViewBag.tag == "phong" ? "active" : "")" href="/Admin/LeTan/Index">Phòng</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewBag.tag == "thuephong" ? "active" : "")" href="/Admin/LeTan/DanhSachPhieuThue">Thuê phòng</a>
                </li>
                <li class="ml-auto">
                    <span class="text-white">@ViewBag.username</span>
                    <a role="button" class="btn btn-secondary" id="logout" href="/Admin/Login/Logout">Đăng xuất</a>
                </li>
            </ul>
        </div>
    </nav>
}

@RenderBody()

@section script {
    @RenderSection("letan_script", false)
}
