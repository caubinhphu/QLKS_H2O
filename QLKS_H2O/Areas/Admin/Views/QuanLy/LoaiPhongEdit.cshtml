@model QLKS_H2O.Models.LOAIPHONG

@{
    ViewBag.Title = "LoaiPhongEdit";
    Layout = "~/Areas/Admin/Views/Shared/_QuanLyLayout.cshtml";
}

@using (Html.BeginForm("LoaiPhongEdit", "QuanLy", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal w-75 mx-auto">
        <h4>Thông tin loại phòng</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MA_LOAIPHONG)

        <div class="form-group d-flex align-items-center">
            @Html.LabelFor(model => model.MA_LOAIPHONG, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MA_LOAIPHONG, new { htmlAttributes = new { @class = "form-control form-control-sm", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.MA_LOAIPHONG, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group d-flex align-items-center">
            @Html.LabelFor(model => model.TEN_LOAIPHONG, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TEN_LOAIPHONG, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                @Html.ValidationMessageFor(model => model.TEN_LOAIPHONG, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group d-flex align-items-center">
            @Html.LabelFor(model => model.KICHTHUOC, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.KICHTHUOC, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                @Html.ValidationMessageFor(model => model.KICHTHUOC, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group d-flex align-items-center">
            @Html.LabelFor(model => model.MAMAU, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input id="MAMAU" name="MAMAU" type="color" class="w-25 form-control form-control-sm" value="@Model.MAMAU" />
                @Html.ValidationMessageFor(model => model.MAMAU, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group d-flex align-items-center">
            @Html.LabelFor(model => model.ANH, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="ANH" accept="image/*" required class="form-control form-control-sm" />
                @Html.ValidationMessageFor(model => model.ANH, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay lại", "LoaiPhongIndex")
</div>
